library(zoo)
data <- read.table("BTCvsSP500.csv", header = T, sep = ",")
t = data[,2]
t = as.Date(t)
btc = data[,3]
sp = data[,4]
fwd_btc = list()
fwd_sp = list()
offset = 20
for(i in 1:(1259 - offset)){
fwd_btc[[i]] = btc[i + offset] - btc[i]
fwd_sp[[i]] = sp[i + offset] - sp[i]
}
plot(t[seq(1,1259 - offset)], fwd_btc, type = "l", axes = T, frame.plot = F)
lines(t[seq(1,1259 - offset)], fwd_sp)
plot(t[seq(1,1259 - offset)], fwd_btc, type = "l", axes = T, frame.plot = F, ylab = "Change in price in 20 days", xlab = "Time")
lines(t[seq(1,1259 - offset)], fwd_sp)
plot(t[seq(1,1259 - offset)], fwd_btc, type = "l", axes = T, frame.plot = F, ylab = "Change in price in 20 days", xlab = "Time", col = "blue")
lines(t[seq(1,1259 - offset)], fwd_sp, col = "red")
legend( "topleft", legend = c("Bitcoin", "SP500"), col = c("blue", "red"), lwd = 2)
